<div class="h-screen bg-gray-50 overflow-hidden">
  <!-- Flash Messages -->
  <%= if Phoenix.Flash.get(@flash, :info) do %>
    <div class="fixed top-20 right-2 mr-2 w-80 sm:w-96 z-[1000] max-w-md w-full mx-4">
      <div class="bg-emerald-50 text-emerald-800 ring-emerald-500 ring-1 px-6 py-3 rounded-lg shadow-lg">
        <div class="flex items-center justify-between">
          <span class="font-medium">{Phoenix.Flash.get(@flash, :info)}</span>
          <button
            onclick="this.parentElement.parentElement.parentElement.remove()"
            class="text-emerald-600 hover:text-emerald-400 ml-4"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"
              >
              </path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  <% end %>

  <%= if Phoenix.Flash.get(@flash, :error) do %>
    <div class="fixed top-20 right-2 mr-2 w-80 sm:w-96 z-[1000] max-w-md w-full mx-4">
      <div class="bg-rose-50 text-rose-900 shadow-md ring-rose-500 ring-1 px-6 py-3 rounded-lg shadow-lg">
        <div class="flex items-center justify-between">
          <span class="font-medium">{Phoenix.Flash.get(@flash, :error)}</span>
          <button
            onclick="this.parentElement.parentElement.parentElement.remove()"
            class="text-rose-600 hover:text-rose-400 ml-4"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"
              >
              </path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  <% end %>
  
<!-- main contents -->
  <main
    id="site__main"
    class="2xl:ml-72 xl:ml-64 h-[calc(100vh-64px)] mt-16 bg-gray-50 overflow-y-auto"
  >
    <div class="p-2.5 pt-4">
      <!-- timeline -->
      <div class="lg:flex lg:items-start 2xl:gap-8 gap-6 ml-16" id="js-oversized">
        
<!-- Center Feed -->
        <div class="flex-1 mr-8">
          <!-- Profile Completion Progress Bar -->
          <%= unless @profile_completion.is_complete do %>
            <div class="bg-gradient-to-r from-blue-50 to-indigo-50 border border-blue-200 rounded-xl shadow-sm p-6 mb-6">
              <div class="flex items-start justify-between mb-4">
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Complete Your Profile</h3>
                  <p class="text-sm text-gray-600">
                    Complete your profile to get the most out of Emanuel Network and help others find you.
                  </p>
                </div>
                <div class="text-right">
                  <div class="text-2xl font-bold text-blue-600">
                    {@profile_completion.percentage}%
                  </div>
                  <div class="text-xs text-gray-500">Complete</div>
                </div>
              </div>
              
<!-- Progress Bar -->
              <div class="mb-4">
                <div class="flex justify-between text-sm text-gray-600 mb-2">
                  <span>
                    {@profile_completion.completed_count} of {@profile_completion.total_count} completed
                  </span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-3">
                  <div
                    class="bg-gradient-to-r from-blue-500 to-indigo-600 h-3 rounded-full transition-all duration-500 ease-out"
                    style={"width: #{@profile_completion.percentage}%"}
                  >
                  </div>
                </div>
              </div>
              
<!-- Missing Items -->
              <%= if length(@profile_completion.missing_items) > 0 do %>
                <div class="space-y-2">
                  <h4 class="text-sm font-medium text-gray-700">Still needed:</h4>
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                    <%= for item <- @profile_completion.missing_items do %>
                      <div class="flex items-center space-x-2 text-sm text-gray-600">
                        <svg
                          class="w-4 h-4 text-orange-500"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                          />
                        </svg>
                        <span>{item}</span>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
              
<!-- Action Button -->
              <div class="mt-4 pt-4 border-t border-blue-200">
                <a
                  href="/settings"
                  class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors duration-200"
                >
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                    />
                  </svg>
                  Complete Profile
                </a>
              </div>
            </div>
          <% end %>
          
<!-- stories -->
          <!--<div class="mb-8">
            <div class="relative">
              <div class="py-5">
                <ul class="flex gap-3 overflow-x-auto">
                  <li class="shrink-0">
