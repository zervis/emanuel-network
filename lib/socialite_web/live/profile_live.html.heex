                  <%= for event <- @upcoming_events do %>
                    <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                      <div class="flex items-start justify-between">
                        <div class="flex-1">
                          <a 
                            href={~p"/events/#{event.id}"}
                            class="font-semibold text-gray-900 hover:text-blue-600 transition-colors block"
                          >
                            <%= event.title %>
                          </a>
                          <div class="flex items-center space-x-4 mt-2 text-sm text-gray-600">
                            <span class="flex items-center">
                              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                              </svg>
                              <%= Timex.format!(event.start_time, "{Mfull} {D}, {YYYY} at {h12}:{m} {AM}") %>
                            </span>
                            <span class="flex items-center">
                              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                              </svg>
                              <%= event.attendees_count %> attending
                            </span>
                            <span class="flex items-center">
                              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                              </svg>
                              <%= event.group.name %>
                            </span>
                          </div>
                          <%= if event.description do %>
                            <p class="text-sm text-gray-500 mt-2 line-clamp-2">
                              <%= String.slice(event.description, 0, 150) %><%= if String.length(event.description) > 150, do: "..." %>
                            </p>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Interests & Tags Tab -->
            <%= if length(@user_tags) > 0 do %>
              <div id="interests-content" class="tab-content hidden">
                <div class="space-y-6">
                  <!-- Tags by Category -->
                  <%= for {category, tags} <- @user_tags do %>
                    <div class="bg-gray-50 rounded-lg p-6">
                      <div class="flex items-center space-x-3 mb-4">
                        <div class="w-8 h-8 rounded-full flex items-center justify-center" style={"background-color: #{category.color}20; color: #{category.color}"}>
                          <%= if category.icon do %>
                            <span class="text-sm"><%= category.icon %></span>
                          <% else %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                            </svg>
                          <% end %>
                        </div>
                        <div>
                          <h3 class="text-lg font-semibold text-gray-900"><%= category.name %></h3>
                          <%= if category.description do %>
                            <p class="text-sm text-gray-600"><%= category.description %></p>
                          <% end %>
                        </div>
                      </div>
                      
                      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
                        <%= for tag <- tags do %>
                          <div class="bg-white rounded-lg p-4 border border-gray-200 hover:shadow-md transition-shadow">
                            <div class="flex items-center justify-between mb-2">
                              <span class="font-medium text-gray-900"><%= tag.tag.name %></span>
                              <%= if tag.proficiency_level > 1 do %>
                                <div class="flex items-center space-x-1">
                                  <%= for _i <- 1..tag.proficiency_level do %>
                                    <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                                    </svg>
                                  <% end %>
                                </div>
                              <% end %>
                            </div>
                            <%= if tag.tag.description do %>
                              <p class="text-sm text-gray-600 line-clamp-2"><%= tag.tag.description %></p>
                            <% end %>
                            <div class="mt-2 flex items-center justify-between text-xs text-gray-500">
                              <span>Proficiency: <%= tag.proficiency_level %>/5</span>
                              <%= if tag.tag.usage_count > 0 do %>
                                <span><%= tag.tag.usage_count %> users</span>
                              <% end %>
                            </div>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                  
                  <!-- Summary Stats -->
                  <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
                    <div class="flex items-center space-x-3 mb-3">
                      <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                      </svg>
                      <h3 class="text-lg font-semibold text-blue-900">Interest Summary</h3>
                    </div>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                      <div class="text-center">
                        <div class="text-2xl font-bold text-blue-600"><%= length(@user_tags) %></div>
                        <div class="text-sm text-blue-700">Categories</div>
                      </div>
                      <div class="text-center">
                        <div class="text-2xl font-bold text-blue-600">
                          <%= @user_tags |> Enum.map(fn {_category, tags} -> length(tags) end) |> Enum.sum() %>
                        </div>
                        <div class="text-sm text-blue-700">Total Tags</div>
                      </div>
                      <div class="text-center">
                        <div class="text-2xl font-bold text-blue-600">
                          <%= 
                            total_tags = @user_tags |> Enum.map(fn {_category, tags} -> length(tags) end) |> Enum.sum()
                            if total_tags > 0 do
                              sum_proficiency = @user_tags |> Enum.flat_map(fn {_category, tags} -> Enum.map(tags, fn tag -> tag.proficiency_level end) end) |> Enum.sum()
                              Float.round(sum_proficiency / total_tags, 1)
                            else
                              0
                            end
                          %>
                        </div>
                        <div class="text-sm text-blue-700">Avg Proficiency</div>
                      </div>
                      <div class="text-center">
                        <div class="text-2xl font-bold text-blue-600">
                          <%= 
                            @user_tags 
                            |> Enum.flat_map(fn {_category, tags} -> tags end)
                            |> Enum.count(fn tag -> tag.proficiency_level >= 4 end)
                          %>
                        </div>
                        <div class="text-sm text-blue-700">Expert Level</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Information Tab -->
            <div id="information-content" class="tab-content hidden">
              <div class="space-y-6">
                <!-- Personal Information -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <%= if @profile_user.gender do %>
                    <div class="flex items-center space-x-3 p-4 bg-gray-50 rounded-lg">
                      <div class="flex-shrink-0">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                      </div>
                      <div>
                        <div class="text-sm text-gray-500">Gender</div>
                        <div class="font-medium text-gray-900"><%= @profile_user.gender %></div>
                      </div>
                    </div>
                  <% end %>

                  <%= if @profile_user.relationship_status do %>
                    <div class="flex items-center space-x-3 p-4 bg-gray-50 rounded-lg">
                      <div class="flex-shrink-0">
                        <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                      </div>
                      <div>
                        <div class="text-sm text-gray-500">Relationship Status</div>
                        <div class="font-medium text-gray-900"><%= @profile_user.relationship_status %></div>
                      </div>
                    </div>
                  <% end %>

                  <%= if @profile_user.personality_type do %>
                    <div class="flex items-center space-x-3 p-4 bg-gray-50 rounded-lg">
                      <div class="flex-shrink-0">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                        </svg>
                      </div>
                      <div>
                        <div class="text-sm text-gray-500">Personality Type</div>
                        <div class="font-medium text-gray-900"><%= @profile_user.personality_type %></div>
                      </div>
                    </div>
                  <% end %>

                  <%= if @profile_user.birthdate do %>
                    <div class="flex items-center space-x-3 p-4 bg-gray-50 rounded-lg">
                      <div class="flex-shrink-0">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                      </div>
                      <div>
                        <div class="text-sm text-gray-500">Date of Birth</div>
                        <div class="font-medium text-gray-900"><%= if @profile_user.birthdate, do: Date.to_string(@profile_user.birthdate), else: "Not specified" %></div>
                      </div>
                    </div>
                  <% end %>

                  <%= if @profile_user.height do %>
                    <div class="flex items-center space-x-3 p-4 bg-gray-50 rounded-lg">
                      <div class="flex-shrink-0">
                        <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
                        </svg>
                      </div>
                      <div>
                        <div class="text-sm text-gray-500">Height</div>
                        <div class="font-medium text-gray-900"><%= @profile_user.height %> cm</div>
                      </div>
                    </div>
                  <% end %>

                  <%= if @profile_user.weight do %>
                    <div class="flex items-center space-x-3 p-4 bg-gray-50 rounded-lg">
                      <div class="flex-shrink-0">
                        <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                        </svg>
                      </div>
                      <div>
                        <div class="text-sm text-gray-500">Weight</div>
                        <div class="font-medium text-gray-900"><%= @profile_user.weight %> kg</div>
                      </div>
                    </div>
                  <% end %>
                </div>

                <!-- BMI Information -->
                <%= if @profile_user.height && @profile_user.weight do %>
                  <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
                    <div class="flex items-center space-x-3 mb-3">
                      <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                      </svg>
                      <h3 class="text-lg font-semibold text-blue-900">Body Mass Index (BMI)</h3>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                      <div>
                        <div class="text-sm text-blue-700">BMI Value</div>
                        <div class="text-2xl font-bold text-blue-900"><%= Socialite.User.bmi(@profile_user) %></div>
                      </div>
                      <div>
                        <div class="text-sm text-blue-700">Category</div>
                        <div class="text-lg font-semibold text-blue-900"><%= Socialite.User.bmi_category(@profile_user) %></div>
                      </div>
                    </div>
                  </div>
                <% end %>

                <!-- Location Information -->
                <%= if Socialite.User.has_location?(@profile_user) do %>
                  <div class="bg-green-50 border border-green-200 rounded-lg p-6">
                    <div class="flex items-center space-x-3 mb-3">
                      <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                      <h3 class="text-lg font-semibold text-green-900">Location Information</h3>
                      <%= if @distance do %>
                        <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded-full">
                          <%= @distance %> km away
                        </span>
                      <% end %>
                    </div>
                    <%= if @profile_user.address do %>
                      <div class="space-y-2">
                        <%= if @profile_user.address do %>
                          <div>
                            <div class="text-sm text-green-700">Address</div>
                            <div class="font-medium text-green-900"><%= @profile_user.address %></div>
                          </div>
                        <% end %>
                        <%= if @profile_user.city do %>
                          <div>
                            <div class="text-sm text-green-700">City</div>
                            <div class="font-medium text-green-900"><%= @profile_user.city %><%= if @profile_user.state, do: ", #{@profile_user.state}" %></div>
                          </div>
                        <% end %>
                        <%= if @profile_user.country do %>
                          <div>
                            <div class="text-sm text-green-700">Country</div>
                            <div class="font-medium text-green-900"><%= @profile_user.country %></div>
                          </div>
                        <% end %>
                      </div>
                    <% else %>
                      <div>
                        <div class="text-sm text-green-700">Coordinates</div>
                        <div class="font-medium text-green-900">
                          <%= Float.round(@profile_user.latitude, 4) %>, <%= Float.round(@profile_user.longitude, 4) %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Image Modal -->
<div id="imageModal" class="fixed inset-0 bg-black bg-opacity-75 hidden z-50 flex items-center justify-center" onclick="closeImageModal()">
  <div class="max-w-4xl max-h-full p-4">
    <img id="modalImage" src="" alt="Full size image" class="max-w-full max-h-full object-contain rounded-lg">
  </div>
  <button onclick="closeImageModal()" class="absolute top-4 right-4 text-white text-2xl hover:text-gray-300">
    √ó
  </button>
</div>

<script>
  function openImageModal(src) {
    document.getElementById('modalImage').src = src;
    document.getElementById('imageModal').classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeImageModal() {
    document.getElementById('imageModal').classList.add('hidden');
    document.body.style.overflow = 'auto';
  }

  function showTab(tabName) {
    // Hide all tab contents
    const tabContents = document.querySelectorAll('.tab-content');
    tabContents.forEach(content => {
      content.classList.add('hidden');
    });

    // Remove active class from all tab buttons
    const tabButtons = document.querySelectorAll('.tab-button');
    tabButtons.forEach(button => {
      button.classList.remove('active', 'border-blue-500', 'text-blue-600');
      button.classList.add('border-transparent', 'text-gray-500');
    });

    // Show selected tab content
    const selectedContent = document.getElementById(tabName + '-content');
    if (selectedContent) {
      selectedContent.classList.remove('hidden');
    }

    // Add active class to selected tab button
    const selectedButton = document.getElementById(tabName + '-tab');
    if (selectedButton) {
      selectedButton.classList.add('active', 'border-blue-500', 'text-blue-600');
      selectedButton.classList.remove('border-transparent', 'text-gray-500');
    }
  }

  // Close modal on escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeImageModal();
    }
  });

  // Initialize tabs on page load
  document.addEventListener('DOMContentLoaded', function() {
    // Posts tab is active by default, but ensure it's properly set
    showTab('posts');
  });
</script>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tab-button {
    transition: all 0.2s ease-in-out;
  }

  .tab-button:hover {
    border-color: #d1d5db !important;
    color: #374151 !important;
  }

  .tab-button.active:hover {
    border-color: #3b82f6 !important;
    color: #2563eb !important;
  }
</style> 